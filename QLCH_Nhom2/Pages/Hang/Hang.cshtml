@page
@model QLCH_Nhom2.Pages.Hang.HangModel
@{
}
<div style="background-color:#1877F2;">
    <hr />
    <h1 style="text-align:center; color:white">HÀNG HOÁ</h1>
    <hr />
</div>
<br />
<a style="background-color:#0dac50; float:right; margin-right: 100px; width: 90px; height:40px; padding-bottom: 0;
    padding-top: 8px;" class="btn btn-primary btn-sm" href="/Hang/Create">Thêm mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Mã hàng</th>
            <th>Tên hàng</th>
            <th>Số lượng</th>
            <th>Giá nhập</th>
            <th>Giá bán</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Hang in Model.listHang)
        {
            <tr>
                <td>@Hang.MaHang</td>
                <td>@Hang.TenHang</td>
                <td>@Hang.SoLuong</td>
                <td>@Hang.GiaNhap</td>
                <td>@Hang.GiaBan</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Hang/Edit?MaHang=@Hang.MaHang">Sửa</a>
                    <a class="btn btn-danger btn-sm" href="/Hang/Delete?MaHang=@Hang.MaHang">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
