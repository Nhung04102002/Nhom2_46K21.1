@page
@model QLCH_Nhom2.Pages.KhachHang.KhachHangModel
@{
}
<div style="background-color:#1877F2;">
    <hr />
    <h1 style="text-align:center; color:white">KHÁCH HÀNG</h1>
    <hr />
</div>

<br />
<a class="btn btn-primary btn-sm" style="background-color:#0dac50; float:right; margin-right: 72px; width: 90px; height:40px; padding-bottom: 0;
    padding-top: 8px;" href="/KhachHang/Create">Thêm mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Mã khách hàng</th>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var KH in Model.listKH)
        {
            <tr>
                <td>@KH.MaKH</td>
                <td>@KH.TenKH</td>
                <td>@KH.SDT</td>
                <td>@KH.DiaChi</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/KhachHang/Edit?MaKH=@KH.MaKH">Sửa</a>
                    <a class="btn btn-danger btn-sm" href="/KhachHang/Delete?MaKH=@KH.MaKH">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
