@page
@model QLCH_Nhom2.Pages.HoaDon.HoaDonModel
@{
}
<div style="background-color:#1877F2;">
    <hr />
    <h1 style="text-align:center; color:white">HOÁ ĐƠN</h1>
    <hr />
</div>
<br/>
<a class="btn btn-primary btn-sm" style="background-color:#0dac50; float:right; margin-right: 72px; width: 90px; height:40px; padding-bottom: 0;
    padding-top: 8px;" href="/BanHang/BanHang">Thêm mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Mã hoá đơn</th>
            <th>Tên khách hàng</th>
            <th>Ngày bán</th>
            <th>Tổng tiền</th>
            <th>Chiết khấu</th>
            <th>Thanh toán</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var HD in Model.listHD)
        {
            <tr>
                <td>@HD.MaHD</td>
                <td>@HD.TenKH</td>
                <td>@HD.NgayBan</td>
                <td>@HD.TongTien</td>
                <td>@HD.ChietKhau</td>
                <td>@HD.ThanhToan</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/HoaDon/Info?MaHD=@HD.MaHD">Xem</a>
                    <a class="btn btn-danger btn-sm" href="/HoaDon/Delete?MaHD=@HD.MaHD">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>