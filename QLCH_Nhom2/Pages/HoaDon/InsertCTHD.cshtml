@page
@using System.Data.SqlClient;
@model QLCH_Nhom2.Pages.HoaDon.InsertCTHDModel
@{
    String MaHD = Request.Query["MaHD"];
    String MaHang = Request.Query["MaHang"];
    int SoLuong = Convert.ToInt32(Request.Query["SoLuong"]);
    decimal ThanhTien = Convert.ToDecimal(Request.Query["ThanhTien"]);
    try
    {
        String connectionString = "Data Source=.\\sqlexpress;Initial Catalog=Nhom2_QLBH;Integrated Security=True";
        using (SqlConnection connection = new SqlConnection(connectionString))
        {
            connection.Open();

            String sql1 = "insert into CT_HOADON values (@MaHD, @MaHang, @SoLuong, @ThanhTien)";

            using (SqlCommand command = new SqlCommand(sql1, connection))
            {
                command.Parameters.AddWithValue("@MaHD", @MaHD);
                command.Parameters.AddWithValue("@MaHang", @MaHang);
                command.Parameters.AddWithValue("@SoLuong", @SoLuong);
                command.Parameters.AddWithValue("@ThanhTien", @ThanhTien);

                command.ExecuteNonQuery();
            }

        }
    }
    catch (Exception)
    {
    }
    Response.Redirect("/HoaDon/CTHD");
}

