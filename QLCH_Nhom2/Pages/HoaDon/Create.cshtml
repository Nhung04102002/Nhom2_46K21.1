@page
@model QLCH_Nhom2.Pages.HoaDon.CreateModel
@{
}
<div style="background-color:#1877F2;">
    <hr />
    <h1 style="text-align:center; color:white">BÁN HÀNG (1)</h1>
    <hr />
</div>
<br />
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3" style="display:none;">
        <label class="col-sm-3 col-form-label">Mã hoá đơn</label>
        <label class="col-sm-3 col-form-label" style="border-bottom:2px black solid;">@Model.hdInfo.MaHD</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="MaHD" value="@Model.hdInfo.MaHD">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Mã khách hàng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="MaKH" value="@Model.hdInfo.MaKH">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Ngày bán</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="NgayBan" value="@Model.hdInfo.NgayBan">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Tổng tiền</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TongTien" value="@Model.hdInfo.TongTien">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Chiết khấu</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ChietKhau" value="@Model.hdInfo.ChietKhau">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Thanh toán</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="ThanhToan" value="@Model.hdInfo.ThanhToan">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/HoaDon/HoaDon" role="button">Huỷ</a>
        </div>
    </div>
</form>


