@page
@model QLCH_Nhom2.Pages.NhapHang.InfoModel
@{
}
<style>
    .cthd {
        width: 40%;
    }

    .itm {
        width: 60%;
        text-align: right;
        padding-right: 70px;
    }

    hr {
        width: 90%;
    }
</style>
<h2>Chi tiết phiếu nhập kho</h2>
<br />
<br />
<div style="display:flex; width:100%;">

    <div style="width:30%;">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Mã nhập hàng</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.MaNK</label>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Ngày nhập</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.NgayNhap</label>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Nhà cung cấp</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.MaNCC - @Model.ctnkInfo.TenNCC</label>
        </div>
        <hr />
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Tổng số lượng</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.TongSL</label>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Tổng số mặt hàng</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.TongHang</label>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Tổng tiền</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.TongTien</label>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Chiết khấu</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.ChietKhau</label>
        </div>
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label cthd">Thanh Toán</label>
            <label class="col-sm-3 col-form-label itm">@Model.ctnkInfo.ThanhToan</label>
        </div>
    </div>

    <div style="width:70%;">
        <table class="table">
            <thead>
                <tr>
                    <th>Mã hàng</th>
                    <th>Tên hàng</th>
                    <th>Số lượng</th>
                    <th>Giá nhập</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var CTnk in Model.listCTnk)
                {
                    <tr style="height:10%;">
                        <td>@CTnk.MaHang</td>
                        <td>@CTnk.TenHang</td>
                        <td>@CTnk.SoLuong</td>
                        <td>@CTnk.GiaNhap</td>
                        <td>@CTnk.ThanhTien</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="margin-top:40px;">
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <a class="btn btn-danger btn-sm" href="/NhapHang/Delete?MaNK=@Model.ctnkInfo.MaNK">Xoá</a>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/NhapHang/NhapHang" role="button">Huỷ</a>
        </div>
    </div>
</div>

